/**
头部组件
*/

.bg-header {
  background-color: #4b8b6d;
  padding: 50rpx 30rpx 150rpx 40rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.info {
  display: flex;
  align-items: center;
}

.info >text {
  color: #fff;
  font-size: 56rpx;
  margin-left: 30rpx;
}

.bg-certification {
  background-color: #3c785a;
}

.bg-certification >text {
  font-size: 24rpx;
  color: #fff;
  margin: 20rpx;
}

/**
底部容器
*/

.body {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  margin-top: 200rpx;
  background-color: #fff;
  border-radius: 14% 14% 0 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/**
菜单
*/
.top-line {
  background-color: #000000;
  height: 10rpx;
  width: 150rpx;
  margin-top: 15rpx;
}

.top-menu {
  margin: 40rpx 0 0 0;
  width: 100%;
  display: flex;
  justify-content: space-around;
}

.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.img-menu-top {
  width: 100rpx;
  height: 100rpx;
}

.menu-item >text {
  font-size: 26rpx;
  margin-top: 15rpx;
}

.img-menu-default{
  width: 60rpx;
  height: 60rpx;
}

.body-item{
  width: 100%;
  display: flex;
  justify-content: space-around;
}

.bottom-item{
  width: 100%;
  display: flex;
  justify-content: center;
}

.activity-item{
  width: 100%;
  margin: 0 30rpx;
}

.activity-item image{
  width: 100%;
}